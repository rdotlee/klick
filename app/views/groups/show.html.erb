<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Group #<%= @group.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl>
          <dt>Event</dt>
          <dd><a href="events/<%= @group.event.id %>"><%= @group.event.description %></a></dd>
          <dt>Event Date</dt>
          <dd><%= @group.event.date.strftime('%a %b. %e, %Y') %></dd>

        </dl>
        <table class="table table-striped">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Class</th>
                  <th>Class</th>
                <th>Program</th>
                <th>Section</th>
                <th>KWEST</th>
                </tr>
              </thead>
              <tbody>
                <% Registration.where("group_id=?",@group.id).each do |registration| %>
                <tr>
                  <td><%= registration.user.last_name %>, <%= registration.user.first_name %></td>
                  <td><%= registration.user.class_year %></td>
                <td><%= registration.user.program.name %></td>
                <td><%= registration.user.section.name %></td>
                <td><%= registration.user.kwest.trip %> - <%= registration.user.kwest.year.to_s %></td>
                <% end %>
              </tbody>
            </table>
            <div class="btn-group btn-group-justified">
              <a href="/groups" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/groups/<%= @group.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_group/<%= @group.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
