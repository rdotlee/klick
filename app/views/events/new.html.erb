<!-- Validation failure messages -->

<% if @event.errors.any? %>
  <% @event.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Event</h3>
      </div>
      <div class="panel-body">
        <form action="/create_event" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for description -->
          <div class="form-group">
            <label for="description" class="col-sm-2 control-label">
              Description
            </label>
            <div class="col-sm-10">
              <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @event.description %></textarea>
            </div>
          </div>

          <!-- Label and input for event_type_id -->
          <div class="form-group">
            <label for="event_type_id" class="col-sm-2 control-label">
              Event type
            </label>
            <div class="col-sm-10">
              <input type="text" id="event_type_id" name="event_type_id" placeholder="Event type" class="form-control" value="<%= @event.event_type_id %>">
            </div>
          </div>

          <!-- Label and input for date -->
          <div class="form-group">
            <label for="date" class="col-sm-2 control-label">
              Date
            </label>
            <div class="col-sm-10">
              <input type="text" id="date" name="date" placeholder="Date" class="form-control" value="<%= @event.date %>">
            </div>
          </div>

          <!-- Label and input for time -->
          <div class="form-group">
            <label for="time" class="col-sm-2 control-label">
              Time
            </label>
            <div class="col-sm-10">
              <input type="text" id="time" name="time" placeholder="Time" class="form-control" value="<%= @event.time %>">
            </div>
          </div>

          <!-- Label and input for location_id -->
          <div class="form-group">
            <label for="location_id" class="col-sm-2 control-label">
              Location
            </label>
            <div class="col-sm-10">
              <input type="text" id="location_id" name="location_id" placeholder="Location" class="form-control" value="<%= @event.location_id %>">
            </div>
          </div>

          <!-- Label and input for count_registration -->
          <div class="form-group">
            <label for="count_registration" class="col-sm-2 control-label">
              Count registration
            </label>
            <div class="col-sm-10">
              <input type="text" id="count_registration" name="count_registration" placeholder="Count registration" class="form-control" value="<%= @event.count_registration %>">
            </div>
          </div>

          <!-- Label and input for group_size -->
          <div class="form-group">
            <label for="group_size" class="col-sm-2 control-label">
              Group size
            </label>
            <div class="col-sm-10">
              <input type="text" id="group_size" name="group_size" placeholder="Group size" class="form-control" value="<%= @event.group_size %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Event
              </button>
              or
              <a href="/events">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
